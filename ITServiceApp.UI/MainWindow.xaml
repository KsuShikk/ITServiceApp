<Window x:Class="ITServiceApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система учета заявок IT-оборудования" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Учет заявок на обслуживание IT-оборудования" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Добавить заявку" Click="AddRequest_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Редактировать" Click="EditRequest_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Удалить" Click="DeleteRequest_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Статистика" Click="ShowStatistics_Click" Width="80"/>
        </StackPanel>

        <DataGrid Grid.Row="2" x:Name="RequestsGrid" AutoGenerateColumns="False" 
                  SelectionMode="Single" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding RequestNumber}" Width="80"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding CreationDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Тип оборудования" Binding="{Binding EquipmentType}" Width="120"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding EquipmentModel}" Width="120"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding ClientName}" Width="150"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}" Width="100"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Инженер" Binding="{Binding AssignedEngineer}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="SearchTextBox" Width="200" TextChanged="SearchTextBox_TextChanged"/>
            <ComboBox x:Name="StatusFilterComboBox" Width="150" Margin="10,0,0,0"
                      SelectionChanged="StatusFilterComboBox_SelectionChanged"/>
        </StackPanel>
    </Grid>
</Window>