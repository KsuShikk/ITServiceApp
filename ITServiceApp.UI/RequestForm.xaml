<Window x:Class="ITServiceApp.UI.RequestForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заявка на обслуживание" Height="500" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Форма заявки" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1" Text="Номер заявки:"/>
        <TextBox Grid.Row="2" x:Name="RequestNumberTextBox" Margin="0,2,0,10"/>

        <TextBlock Grid.Row="3" Text="Тип оборудования:"/>
        <ComboBox Grid.Row="4" x:Name="EquipmentTypeComboBox" Margin="0,2,0,10"/>

        <TextBlock Grid.Row="5" Text="Модель оборудования:"/>
        <TextBox Grid.Row="6" x:Name="EquipmentModelTextBox" Margin="0,2,0,10"/>

        <TextBlock Grid.Row="7" Text="Описание проблемы:"/>
        <TextBox Grid.Row="8" x:Name="ProblemDescriptionTextBox" Height="60" 
                 TextWrapping="Wrap" AcceptsReturn="True" Margin="0,2,0,10"/>

        <TextBlock Grid.Row="9" Text="ФИО клиента:"/>
        <TextBox Grid.Row="10" x:Name="ClientNameTextBox" Margin="0,2,0,10"/>

        <TextBlock Grid.Row="11" Text="Номер телефона:"/>
        <TextBox Grid.Row="12" x:Name="PhoneNumberTextBox" Margin="0,2,0,10"/>

        <StackPanel Grid.Row="13" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Сохранить" Click="Save_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
