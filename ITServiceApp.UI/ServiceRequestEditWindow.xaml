<Window x:Class="ITServiceApp.UI.ServiceRequestEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ITServiceApp.UI"
        xmlns:converters="clr-namespace:ITServiceApp.UI.Converters"
        xmlns:domain="clr-namespace:ITServiceApp.Domain.Models;assembly=ITServiceApp.Domain"
        Title="Редактирование заявки" Height="650" Width="650"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height">

    <Window.Resources>
        <converters:RequestStatusConverter x:Key="StatusConverter"/>
        <converters:DateTimeConverter x:Key="DateTimeConverter"/>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 0: Номер заявки -->
                <RowDefinition Height="Auto"/>
                <!-- 1: Имя клиента -->
                <RowDefinition Height="Auto"/>
                <!-- 2: Телефон -->
                <RowDefinition Height="Auto"/>
                <!-- 3: Email -->
                <RowDefinition Height="Auto"/>
                <!-- 4: Инженер -->
                <RowDefinition Height="Auto"/>
                <!-- 5: Тип оборудования -->
                <RowDefinition Height="Auto"/>
                <!-- 6: Модель -->
                <RowDefinition Height="Auto"/>
                <!-- 7: Дата создания -->
                <RowDefinition Height="Auto"/>
                <!-- 8: Статус -->
                <RowDefinition Height="Auto"/>
                <!-- 9: Описание проблемы (метка) -->
                <RowDefinition Height="80"/>
                <!-- 10: Описание проблемы (поле) -->
                <RowDefinition Height="Auto"/>
                <!-- 11: Комментарии (метка) -->
                <RowDefinition Height="60"/>
                <!-- 12: Комментарии (поле) -->
                <RowDefinition Height="Auto"/>
                <!-- 13: Запчасти (метка) -->
                <RowDefinition Height="40"/>
                <!-- 14: Запчасти (поле) -->
                <RowDefinition Height="Auto"/>
                <!-- 15: Кнопки -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Номер заявки -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Номер заявки:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ServiceRequest.RequestNumber}" Margin="0,0,0,10" Height="25"/>

            <!-- Клиент: Имя -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя клиента:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ServiceRequest.Client.Name}" Margin="0,0,0,10" Height="25"/>

            <!-- Клиент: Телефон -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Телефон:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ServiceRequest.Client.Phone}" Margin="0,0,0,10" Height="25"/>

            <!-- Клиент: Email -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Email:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ServiceRequest.Client.Email}" Margin="0,0,0,10" Height="25"/>

            <!-- Инженер -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Инженер:" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="4" Grid.Column="1"
                      ItemsSource="{Binding AvailableEngineers}"
                      SelectedItem="{Binding ServiceRequest.Engineer}"
                      DisplayMemberPath="Name"
                      Margin="0,0,0,10" Height="25"/>

            <!-- Тип оборудования -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Тип оборудования:" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="5" Grid.Column="1"
                      ItemsSource="{Binding AvailableEquipmentTypes}"
                      SelectedItem="{Binding ServiceRequest.EquipmentType}"
                      Margin="0,0,0,10" Height="25"/>

            <!-- Модель оборудования -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Модель:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding ServiceRequest.EquipmentModel}" Margin="0,0,0,10" Height="25"/>

            <!-- Дата создания -->
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Дата создания:" VerticalAlignment="Center"/>
            <DatePicker Grid.Row="7" Grid.Column="1" 
                        SelectedDate="{Binding ServiceRequest.CreationDate}"
                        Margin="0,0,0,10" Height="25"/>

            <!-- Статус -->
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Статус:" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="8" Grid.Column="1"
                      ItemsSource="{Binding AvailableStatuses}"
                      SelectedItem="{Binding ServiceRequest.Status}"
                      Margin="0,0,0,10" Height="25">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource StatusConverter}}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Описание проблемы -->
            <TextBlock Grid.Row="9" Grid.Column="0" Text="Описание проблемы:" VerticalAlignment="Top" Margin="0,10,0,5"/>
            <TextBox Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" 
                     Text="{Binding ServiceRequest.ProblemDescription}" 
                     TextWrapping="Wrap" AcceptsReturn="True" 
                     Margin="0,0,0,10" VerticalScrollBarVisibility="Auto"/>

            <!-- Комментарии -->
            <TextBlock Grid.Row="11" Grid.Column="0" Text="Комментарии:" VerticalAlignment="Top" Margin="0,10,0,5"/>
            <TextBox Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" 
                     Text="{Binding ServiceRequest.Comments}" 
                     TextWrapping="Wrap" AcceptsReturn="True" 
                     Margin="0,0,0,10" VerticalScrollBarVisibility="Auto"/>

            <!-- Заказанные запчасти -->
            <TextBlock Grid.Row="13" Grid.Column="0" Text="Запчасти:" VerticalAlignment="Top" Margin="0,10,0,5"/>
            <TextBox Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="2" 
                     Text="{Binding ServiceRequest.OrderedParts}" 
                     TextWrapping="Wrap"
                     Margin="0,0,0,20" VerticalScrollBarVisibility="Auto"/>

            <!-- Кнопки -->
            <StackPanel Grid.Row="15" Grid.Column="0" Grid.ColumnSpan="2" 
                        Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Сохранить" Width="100" Height="30" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Отмена" Width="100" Height="30" Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>