<Window x:Class="ITServiceApp.UI.StatisticsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Статистика" Height="250" Width="350">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Статистика работы отдела" 
                       FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

            <TextBlock x:Name="StatsText" TextWrapping="Wrap" Margin="0,5"/>

            <Button Content="Закрыть" Click="CloseButton_Click" Width="80" 
                    HorizontalAlignment="Right" Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Window>